<Window
    x:Name="window"
    x:Class="MouseClicker.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:MouseClicker"
    mc:Ignorable="d"
    Height="200"
    Width="400"
    Title="MouseClicker @ FeiLingshu"
    Background="#FF202020"
    Opacity="1"
    WindowStyle="SingleBorderWindow"
    ResizeMode="CanMinimize"
    ShowActivated="True"
    ShowInTaskbar="True"
    Topmost="True">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            UseAeroCaptionButtons="False"
            NonClientFrameEdges="None"
            GlassFrameThickness="0,1,0,0"
            ResizeBorderThickness="0"
            CornerRadius="0">
        </WindowChrome>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid
            Height="30"
            VerticalAlignment="Top"
            HorizontalAlignment="Stretch"
            Background="#FF303030"
            x:Name="TITLE">
            <TextBlock
                Foreground="#FFE9E9E9"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Consolas, Microsoft YaHei"
                FontSize="16"
                FontWeight="Bold"
                TextAlignment="Left"
                LineHeight="20"
                LineStackingStrategy="BlockLineHeight"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True"
                Margin="10,6,10,4">
                <Run FontSize="16" Foreground="#FFE9E9E9" Text="点就完事儿了"/>
                <Run FontSize="12" Foreground="#FF808080" Text="作者：FeiLingshu"/>
            </TextBlock>
            <Border
                Width="30"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Right"
                Margin="0,0,1,0"
                x:Name="CLOSE">
                <Border.Background>
                    <SolidColorBrush x:Name="CloseBG" Color="#FF303030"/>
                </Border.Background>
                <Path
                    Data="M 0,0 L 10,10 M 0,10 L 10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Stroke="#FFE9E9E9"
                    StrokeThickness="1"
                    IsHitTestVisible="False"/>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Mouse.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard FillBehavior="HoldEnd">
                                <ColorAnimation 
                                    Storyboard.TargetName="CloseBG"
                                    Storyboard.TargetProperty="Color"
                                    To="#FFC42B1C"
                                    Duration="0:0:0.1">
                                    <ColorAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Mouse.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard FillBehavior="HoldEnd">
                                <ColorAnimation 
                                    Storyboard.TargetName="CloseBG"
                                    Storyboard.TargetProperty="Color"
                                    To="#FF303030"
                                    Duration="0:0:0.1">
                                    <ColorAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
            <Border
                Width="30"
                VerticalAlignment="Stretch"
                HorizontalAlignment="Right"
                Margin="0,0,31,0"
                x:Name="MINI">
                <Border.Background>
                    <SolidColorBrush x:Name="MiniBG" Color="#FF303030"/>
                </Border.Background>
                <Path
                    Data="M 0,0 L 10,0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Stroke="#FFE9E9E9"
                    StrokeThickness="1"
                    IsHitTestVisible="False"/>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="Mouse.MouseEnter">
                        <BeginStoryboard>
                            <Storyboard FillBehavior="HoldEnd">
                                <ColorAnimation 
                                    Storyboard.TargetName="MiniBG"
                                    Storyboard.TargetProperty="Color"
                                    To="#FF404040"
                                    Duration="0:0:0.1">
                                    <ColorAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="Mouse.MouseLeave">
                        <BeginStoryboard>
                            <Storyboard FillBehavior="HoldEnd">
                                <ColorAnimation 
                                    Storyboard.TargetName="MiniBG"
                                    Storyboard.TargetProperty="Color"
                                    To="#FF303030"
                                    Duration="0:0:0.1">
                                    <ColorAnimation.EasingFunction>
                                        <SineEase EasingMode="EaseInOut"/>
                                    </ColorAnimation.EasingFunction>
                                </ColorAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
            </Border>
        </Grid>
        <Grid
            HorizontalAlignment="Stretch"
            VerticalAlignment="Center"
            Margin="0,35,0,45">
            <Grid
                Height="20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="10,0,10,0">
                <TextBlock
                    Foreground="#FFE9E9E9"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Left"
                    LineStackingStrategy="BlockLineHeight"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,0,0,0">
                    <Run Text="点击方式："/>
                </TextBlock>
                <RadioButton
                    Background="#FFC0C0C0"
                    BorderBrush="#FF808080"
                    Foreground="#FFC0C0C0"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,1,190,0"
                    Content="鼠标左键"
                    x:Name="Type1"
                    IsChecked="True"/>
                <RadioButton
                    Background="#FF202020"
                    BorderBrush="#FF808080"
                    Foreground="#FF808080"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,1,95,0"
                    Content="鼠标中键"
                    x:Name="Type2"/>
                <RadioButton
                    Background="#FF202020"
                    BorderBrush="#FF808080"
                    Foreground="#FF808080"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,1,0,0"
                    Content="鼠标右键"
                    x:Name="Type3"/>
            </Grid>
            <Grid
                Height="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="10,25,10,0">
                <TextBlock
                    Foreground="#FFE9E9E9"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Left"
                    LineStackingStrategy="BlockLineHeight"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,0,0,20">
                    <Run Text="点击间隔："/>
                </TextBlock>
                <TextBox
                    Width="100"
                    Foreground="#FFE9E9E9"
                    Background="#FF303030"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Left"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,0,20,20"
                    IsUndoEnabled="False"
                    UndoLimit="1"
                    AllowDrop="False"
                    InputMethod.IsInputMethodEnabled="False"
                    x:Name="Time"/>
                <TextBlock
                    Foreground="#FFE9E9E9"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Left"
                    LineStackingStrategy="BlockLineHeight"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,0,0,20">
                    <Run Text="ms"/>
                </TextBlock>
                <CheckBox
                    Background="#FF202020"
                    BorderBrush="#FF808080"
                    Foreground="#FF808080"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,20,0,0"
                    Padding="4,0,0,0"
                    x:Name="Delay">
                    <TextBlock
                        Foreground="#FF808080"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Consolas, Microsoft YaHei"
                        FontSize="14"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        LineStackingStrategy="BlockLineHeight"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        Margin="0,0,0,0">
                        <Run Text="启用随机延时" Foreground="#FF808080" x:Name="DelaySTD"/>
                        <Run Text="- 随机增减1ms至1/10间隔，最长100ms"/>
                    </TextBlock>
                </CheckBox>
            </Grid>
            <Grid
                Height="40"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top"
                Margin="10,70,10,0">
                <TextBlock
                    Foreground="#FFE9E9E9"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Left"
                    LineStackingStrategy="BlockLineHeight"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,0,0,20">
                    <Run Text="点击位置："/>
                </TextBlock>
                <Border
                    Background="#FF303030"
                    BorderBrush="#FF808080"
                    BorderThickness="1"
                    Width="20"
                    Height="20"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    CornerRadius="3"
                    Margin="0,20,0,0">
                    <TextBlock
                        Foreground="#FF808080"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Consolas, Microsoft YaHei"
                        FontSize="14"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        LineStackingStrategy="BlockLineHeight"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        Margin="0,0,0,0">
                        <Run Text="P"/>
                    </TextBlock>
                </Border>
                <TextBlock
                    Foreground="#FFE9E9E9"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    TextAlignment="Left"
                    LineStackingStrategy="BlockLineHeight"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="30,20,0,0">
                    <Run Text="0,0" x:Name="PointSTD"/>
                </TextBlock>
                <CheckBox
                    Background="#FF202020"
                    BorderBrush="#FF808080"
                    Foreground="#FF808080"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,0,0,20"
                    Padding="4,0,0,0"
                    x:Name="Move">
                    <TextBlock
                        Foreground="#FF808080"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Consolas, Microsoft YaHei"
                        FontSize="14"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        LineStackingStrategy="BlockLineHeight"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        Margin="0,0,0,0">
                        <Run Text="启用主动定位" Foreground="#FF808080" x:Name="MoveSTD"/>
                    </TextBlock>
                </CheckBox>
                <Border
                    Width="30"
                    Height="20"
                    Background="#FF303030"
                    BorderBrush="#FF808080"
                    BorderThickness="1"
                    CornerRadius="3"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    Margin="0,20,0,0"
                    x:Name="Get">
                    <Path
                        Data="M 0,5 L 10,5 M 5,0 L 5,10"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                        Stroke="#FFC0C0C0"
                        StrokeThickness="1"
                        IsHitTestVisible="False"
                        x:Name="GetArrow"/>
                </Border>
                <CheckBox
                    Background="#FF202020"
                    BorderBrush="#FF808080"
                    Foreground="#FF808080"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center"
                    FontFamily="Consolas, Microsoft YaHei"
                    FontSize="14"
                    FontWeight="Bold"
                    SnapsToDevicePixels="True"
                    UseLayoutRounding="True"
                    Margin="0,20,35,0"
                    Padding="4,0,0,0"
                    x:Name="MovePlus">
                    <TextBlock
                        Foreground="#FF808080"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Consolas, Microsoft YaHei"
                        FontSize="14"
                        FontWeight="Bold"
                        TextAlignment="Center"
                        LineStackingStrategy="BlockLineHeight"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        Margin="0,0,0,0">
                        <Run Text="启用随机移位" Foreground="#FF808080" x:Name="MovePlusSTD"/>
                        <Run Text="- 10px*10px范围内"/>
                    </TextBlock>
                </CheckBox>
            </Grid>
        </Grid>
        <Border
            Height="25"
            VerticalAlignment="Bottom"
            HorizontalAlignment="Stretch"
            CornerRadius="5"
            Margin="10,0,10,10"
            x:Name="Button">
            <Border.Background>
                <SolidColorBrush x:Name="ButtonBG" Color="#FF303030"/>
            </Border.Background>
            <TextBlock
                Foreground="#FFE9E9E9"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontFamily="Consolas, Microsoft YaHei"
                FontSize="14"
                FontWeight="Bold"
                TextAlignment="Left"
                LineStackingStrategy="BlockLineHeight"
                SnapsToDevicePixels="True"
                UseLayoutRounding="True"
                Margin="0,0,0,0"
                IsHitTestVisible="False">
                <Run Text="开始点击（Alt+F1）" x:Name="ButtonSTD"/>
            </TextBlock>
            <Border.Triggers>
                <EventTrigger RoutedEvent="Mouse.MouseEnter">
                    <BeginStoryboard>
                        <Storyboard FillBehavior="HoldEnd">
                            <ColorAnimation 
                                Storyboard.TargetName="ButtonBG"
                                Storyboard.TargetProperty="Color"
                                To="#FF404040"
                                Duration="0:0:0.1">
                                <ColorAnimation.EasingFunction>
                                    <SineEase EasingMode="EaseInOut"/>
                                </ColorAnimation.EasingFunction>
                            </ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
                <EventTrigger RoutedEvent="Mouse.MouseLeave">
                    <BeginStoryboard>
                        <Storyboard FillBehavior="HoldEnd">
                            <ColorAnimation 
                                Storyboard.TargetName="ButtonBG"
                                Storyboard.TargetProperty="Color"
                                To="#FF303030"
                                Duration="0:0:0.1">
                                <ColorAnimation.EasingFunction>
                                    <SineEase EasingMode="EaseInOut"/>
                                </ColorAnimation.EasingFunction>
                            </ColorAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>
        </Border>
        <Grid.Effect>
            <DropShadowEffect
                BlurRadius="20"
                Color="#FF000000"
                Direction="270"
                Opacity="0.5"
                RenderingBias="Performance"
                ShadowDepth="0"/>
        </Grid.Effect>
    </Grid>
</Window>
